extends base.pug

block content 
    h4 Update Video
    form(method="POST")
        input(name="title", placeholder="Video Title", value=video.title, required, maxlength=80)
        input(placeholder="Description", required, type="text", name="description", value=video.description, minlength=20)
        input(placeholder="Hashtags, seperated by comma", required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="Save", type="submit")




